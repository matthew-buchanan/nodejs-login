<div class="container">
  <a href="/">Home</a>
  <h2>Register</h2>
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="uname">Username</label>
      <input type="text" class="form-control" id="uname" name="username" required>
      <div>
        <small class="warn">{{userMessage}}</small>
      </div>
    </div>
    <div class="form-group">
      <label for="pword">Password</label>
      <input type="password" class="form-control" id="pword" name="password" required>
      <div>
        <small class="warn">{{passwordMessage}}</small>
      </div>
    </div>
    <div class="form-group">
      <label for="cpword">Confirm Password</label>
      <input type="password" class="form-control" id="cpword" name="cpassword" required>
      <div>
        <small class="warn">{{confirmMessage}}</small>
      </div>
    </div>
    <input type="submit" class="btn btn-primary" id="submit">
  </form>
</div>
